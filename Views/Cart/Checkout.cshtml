@model WebAppi.Models.Order

@{
    Layout = "_LayoutCheckout";
}

<div class="container my-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-lg border-light">
                <div class="card-header text-center bg-dark text-white">
                    <h3 class="mb-0">Complete Your Order</h3>
                    <p class="text-muted">Please provide your details below to complete your purchase.</p>
                </div>
                <div class="card-body">
                    <form method="post" action="@Url.Action("Checkout", "Cart")">
                        <div class="row">
                            <!-- Name -->
                            <div class="col-md-6 mb-3">
                                <label for="UserName" class="form-label">Name:</label>
                                <input type="text" id="UserName" name="UserName" class="form-control" value="@Model.UserName" required />
                            </div>

                            <!-- Email -->
                            <div class="col-md-6 mb-3">
                                <label for="Email" class="form-label">Email:</label>
                                <input type="email" id="Email" name="Email" class="form-control" value="@Model.Email" required />
                            </div>
                        </div>

                        <div class="row">
                            <!-- Address -->
                            <div class="col-md-6 mb-3">
                                <label for="Address" class="form-label">Shipping Address:</label>
                                <input type="text" id="Address" name="Address" class="form-control" value="@Model.Address" required />
                            </div>

                            <!-- Phone Number -->
                            <div class="col-md-6 mb-3">
                                <label for="PhoneNumber" class="form-label">Phone Number:</label>
                                <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" value="@Model.PhoneNumber" required />
                            </div>
                        </div>

                        <!-- Button to submit the order -->
                        <div class="text-center">
                            <button type="submit" class="btn btn-dark btn-lg w-50">Place Order</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
