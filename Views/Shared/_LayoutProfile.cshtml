<!DOCTYPE html>
<html lang="uk">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ваш Профіль</title>
    <link rel="apple-touch-icon" sizes="180x180" href="~/favicon_io/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="~/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="~/favicon_io/favicon-16x16.png">
    <!-- Підключення Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>

<body>
<div class="container mt-5">
    <!-- Навігаційне меню профілю -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Ваш профіль</h1>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">На головну</a>
    </div>

    <div class="row">
        <div class="col-md-3">
            <!-- Сайдбар для навігації профілю -->
            <div class="list-group">
                <a href="@Url.Action("Index", "Profile")" class="list-group-item list-group-item-action active">Перегляд профілю</a>
                <a href="@Url.Action("Edit", "Profile")" class="list-group-item list-group-item-action">Редагувати профіль</a>
                <a href="@Url.Action("Logout", "Account")" class="list-group-item list-group-item-action text-danger">Вийти</a>
            </div>
        </div>

        <div class="col-md-9">
            <!-- Контент профілю -->
            @RenderBody()
        </div>
    </div>
</div>

<!-- Підключення скриптів Bootstrap -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>